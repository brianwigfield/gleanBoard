<!DOCTYPE html>
<html>
<head>
    <title>gleanBoard</title>
    <link href="/assets/board.css" rel="stylesheet" type="text/css" />
    <link href="/assets/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script src="/assets/scripts/lib/jquery-1.6.2.min.js"></script>
    <script src="/assets/scripts/lib/jquery-ui-1.8.11.min.js"></script>
    <script src="/assets/scripts/lib/jquery.tmpl.js"></script>
    <script src="/assets/scripts/lib/knockout-1.3.0.js"></script>
</head>

<body>
    <div class="page">

        <div id="menuHolder">
            <div id="title">
                <img src="/assets/images/logo.gif" alt="Logo" />
            </div>

            <div id="menu">
                <ul>
                    <li><a id="addCardLink" href="#">Add Card</a></li>
                    <li><a id="addLaneLink" href="#">Add Lane</a></li>
                </ul>
            </div>

        </div>
        <div id="inlineFormHolder">
            <div id="cardForm" style="display:none;">
                <h4>Create Card</h4>
                <form>
                    <table>
                        <tr>
                            <td>
                                <input id="newcardTitle" data-watermark="&lt; Title &gt;" type="text" data-bind="value: newCards()[0].Title, valueUpdate: 'afterkeydown'" />
                            </td>
                            <td rowspan="2">
                                <ul id="newCardVisualizer" class="connectedSortable boardLane" data-bind="template: { name: 'cardTemplate', foreach: newCards}"></ul>
                            </td>
                        </tr>
                        <tr>
                            <td><input id="newcardDescription" data-watermark="&lt; Description &gt;" type="text" data-bind="value: newCards()[0].Description, valueUpdate: 'afterkeydown'" /></td>
                        </tr>
                    </table>

                </form>
            </div>

            <div id="editCardForm" style="display:none;">
                Edit card here
            </div>

            <div id="laneForm" style="padding:10px; display:none;" >
                <h4>Create Lane</h4>
                <form>
                    <div>
                        <label for="newLaneName">Name</label>
                        <input id="newLaneName" type="text" data-bind="value: newLaneName" />
                   </div>

                   <div>
                        <label for="newLanePosition">Place</label>
                        <select id="newLanePosition" data-bind="template : {name: 'newLanePositons'}"></select>
                   </div>

                   <div>
                        <button data-bind="click: createLane">Create New Lane</button>
                    </div>
                </form>
            </div>

        </div>
        <div style="clear:both"></div>
        <div id="main">
            <script src="/assets/scripts/board.js"></script>

            <script>

                $(function () {
                    boardModel.board = "@Model.Id"
                    @if(Model.Lanes != null)
                    {
                        foreach (var lane in Model.Lanes)
                        {
                            <text>boardModel.setupLanes([new lane("@lane.Id", "@lane.Name",[</text>
                            if (lane.Cards != null)
                            {
                                foreach (var card in lane.Cards)
		                        {
			                        <text>new card("@card.Id","@card.Title", "@card.Description"),</text>
		                        }
                            }
                            <text>])]);</text>
                        }
                    }
                });

            </script>

            <div id="board" data-bind="foreach: {data: lanes, afterRender: initBoard}">
                <div class="boardLaneContainer">
                    <div class="laneName" data-bind="text: Name"></div>
                    <ul class="connectedSortable boardLane" data-bind="template: {name: 'cardTemplate', foreach: Cards}, onCardMove: $root.moveCard, attr: {id:Id}"></ul>
                </div>
            </div>

            <script type="text/html" id="cardTemplate">
                <li id="${Id}" class="laneCard">
                    <div class="cardHeader">${Title}</div>
                    <div class="cardDetails">${Description}</div>
                </li>
            </script>
        
            <script type="text/html" id="newLanePositons">
                {{if lanes().length > 0}}
                    <option value="0">Before ${lanes()[0].Name}</option>
                {{else}}
                    <option value="0">At Begining</option>
                {{/if}}

                {{each lanes}}
                    <option value="${$index + 1}">After ${Name}</option>
                {{/each}}
            </script>

            <div style="clear:both;"></div>

        </div>
    </div>

</body>
</html>