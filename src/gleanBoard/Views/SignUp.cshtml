@resource gleanBoard.Signup

<!DOCTYPE html>
<html>
<head>
    <title>gleanBoard</title>
    <link href="/assets/Site.css" rel="stylesheet" type="text/css" />
    <script src="/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <img src="/assets/images/logo.gif" alt="Logo" />
            </div>

            <div id="logindisplay">
                <a href="/login">LOGIN</a>
            </div>

            <div id="menucontainer">
                <ul id="menu">
                    <li><a href="/">HOME</a></li>
                    <li><a href="/board">BOARD</a></li>
                    <li><a href="/features">FEATURES</a></li>
                    <li><a href="/demo">DEMO</a></li>
                    <li><a href="/signup">SIGN UP</a></li>
                </ul>
            </div>
        </div>

        <div id="main">

            <form id="CreateAccount">
            
                <h1>Create Free Account</h1>
                <label for="Username">Username</label>
                <input id="Username" />

                <label for="Password">Password</label>
                <input id="Password" />

                <label for="Password">Confirm Password</label>
                <input id="PasswordConfirm" />

                <button>Create Account</button>

            </form>

        </div>

        <script>
            $(function () {
                $("#CreateAccount").submit(function () {
                    $.post("/signup",
                        { username: $("#Username").val(), password: $("#Password").val(), passwordConfirm: $("#PasswordConfirm").val() },
                        function (data) { alert(data); },
                        "json");
                    return false;
                });
            });
        </script>

    </div>
</body>
</html>